<%= turbo_frame_tag "modal" do %>
  <div aris-labelledby="modal-title" aria-modal="true" class="fixed inset-0 z-50 overflow-y-auto bg-black/80" role="dialog" data-controller="modal" data-modal-target="modal" data-action="keydown@window->modal#close">
    <div class="h-screen w-full realtive flex items-center justify-center">
      <div class="shadow-xl max-w-2xl bg-white m-1 p-8 origin-bottom mx-auto rounded-2xl">      
        <div class="container w-full mx-auto mt-2">
          <div class="w-full px-4 md:px-0 md:mt-8 mb-16 text-gray-800 leading-normal">
            <div class="flex flex-row flex-wrap flex-grow mt-2">
              <div class="w-full p-3">
                <div class="bg-white border rounded shadow">
                  <div class="border-b p-3">
                    <div class="flex w-full justify-between items-center">
                      <div><h5 class="font-bold uppercase text-gray-600 mb-5 ml-2 modal-title">Edit User</h5></div>
                      <div class="flex mb-2">
                        <button data-action="click->modal#close" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700">Back to Users</button>
                      </div>
                    </div>
                    <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
                      <%= render "form", user: @user %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>